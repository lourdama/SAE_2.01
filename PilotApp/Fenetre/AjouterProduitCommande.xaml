<Window
    x:Class="PilotApp.Fenetre.AjouterProduitCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PilotApp.Fenetre"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AjouterProduitCommande"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel Margin="20">

        <Label HorizontalAlignment="Center" Content="Produit" />
        <ComboBox
            x:Name="cmbProduits"
            Width="240"
            Margin="0,0,0,10"
            DisplayMemberPath="Nom"
            SelectionChanged="cmbProduits_SelectionChanged" />

        <Label HorizontalAlignment="Center" Content="Quantité" />
        <TextBox
            x:Name="txtQuantite"
            Width="240"
            Margin="0,0,0,10" />

        <Label HorizontalAlignment="Center" Content="Prix unitaire (€)" />
        <TextBox
            x:Name="txtPrix"
            Width="240"
            Margin="0,0,0,20" />
        <Button
            x:Name="butValider"
            Width="240"
            Height="30"
            Background="Green"
            Click="butValider_Click"
            Content="Valider"
            Foreground="White" />

    </StackPanel>
</Window>
