<ui:FluentWindow x:Class="PilotApp.Views.LoginWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                Title="Pilot - Connexion" 
                Height="450" 
                Width="550"
                WindowStartupLocation="CenterScreen"
                ResizeMode="NoResize"
                Icon="/logoPilot.ico">

    <Grid>
        <!-- Arrière-plan plus sobre -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F8F9FA" Offset="0"/>
                <GradientStop Color="#E9ECEF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Conteneur principal avec effet moderne mais discret -->
        <Border Background="#FFFFFF" 
                CornerRadius="12" 
                Margin="40"
                BorderBrush="#DEE2E6"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Direction="270" 
                                ShadowDepth="4" 
                                Opacity="0.08" 
                                BlurRadius="16"/>
            </Border.Effect>

            <Grid>
                <!-- Bouton fermer -->
                <ui:Button x:Name="CloseButton"
                          Content="✕"
                          Width="32"
                          Height="32"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Margin="0,12,12,0"
                          Background="Transparent"
                          Foreground="#6C757D"
                          BorderThickness="0"
                          FontSize="14"
                          Click="CloseButton_Click">
                    <ui:Button.Style>
                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#DC3545"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ui:Button.Style>
                </ui:Button>

                <!-- Contenu principal -->
                <StackPanel Margin="50,0,50,0" 
                           VerticalAlignment="Center" Height="350">

                    <!-- Header avec logo et titre -->
                    <Grid Margin="0,0,0,35">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icône sobre -->
                        <Border Grid.Row="0"
                               Width="56"
                               Height="56"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"
                               Background="#495057"
                               CornerRadius="28">
                            <ui:SymbolIcon Symbol="Person24"
                                          FontSize="24"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>

                        <!-- Titre principal -->
                        <TextBlock Grid.Row="1"
                                  Text="PILOT" 
                                  FontSize="32" 
                                  FontWeight="SemiBold" 
                                  HorizontalAlignment="Center" 
                                  Foreground="#212529" 
                                  Margin="0,0,0,6"/>

                        <!-- Sous-titre -->
                        <TextBlock Grid.Row="2"
                                  Text="Gestion des ventes" 
                                  FontSize="14" 
                                  HorizontalAlignment="Center" 
                                  Foreground="#6C757D" 
                                  FontWeight="Normal"/>
                        <TextBlock x:Name="messageErreur" Height="20" TextWrapping="Wrap" Text="Identifiant ou mot de passe erroné" Width="216" Foreground="Red" Visibility="Collapsed" Margin="76,34,76,-36" Grid.Row="2"/>

                    </Grid>

                    <!-- Formulaire de connexion -->

                    <StackPanel Margin="0,0,0,20">



                        <!-- Champ nom d'utilisateur -->
                        <ui:TextBox x:Name="UsernameTextBox"
                                   PlaceholderText="Nom d'utilisateur"
                                   Text="lourdama"
                                   Icon="{ui:SymbolIcon Person24}"
                                   Height="39"
                                   FontSize="14"
                                   Margin="0,0,0,16">
                            <ui:TextBox.Style>
                                <Style TargetType="{x:Type ui:TextBox}" BasedOn="{StaticResource {x:Type ui:TextBox}}">
                                    <Setter Property="BorderBrush" Value="#CED4DA"/>
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Setter Property="Foreground" Value="#212529"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#495057"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#ADB5BD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:TextBox.Style>
                        </ui:TextBox>

                        <!-- Champ mot de passe -->
                        <ui:PasswordBox x:Name="PasswordBoxMDP"
                                       PlaceholderText="Mot de passe"
                                       Text="g4MEfv"
                                       Icon="{ui:SymbolIcon LockClosed24}"
                                       Height="44"
                                       FontSize="14"
                                       Margin="0,0,0,16">
                            <ui:PasswordBox.Style>
                                <Style TargetType="{x:Type ui:PasswordBox}" BasedOn="{StaticResource {x:Type ui:PasswordBox}}">
                                    <Setter Property="BorderBrush" Value="#CED4DA"/>
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Setter Property="Foreground" Value="#212529"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#495057"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#ADB5BD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:PasswordBox.Style>
                        </ui:PasswordBox>

                        <!-- Message d'erreur -->
                        <Border x:Name="ErrorContainer"
                               Background="#F8D7DA"
                               BorderBrush="#F5C6CB"
                               BorderThickness="1"
                               CornerRadius="6"
                               Padding="12,10"
                               Margin="0,0,0,16">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasError}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ErrorCircle24"
                                              Foreground="#721C24"
                                              FontSize="16"
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ErrorMessage}"
                                          Foreground="#721C24"
                                          FontSize="13"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    
                        <!-- Bouton de connexion -->
                        <ui:Button x:Name="LoginButton"
                                  Content="Se connecter"
                                  Height="44"
                                  FontSize="15"
                                  FontWeight="Medium"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Top"
                                  Appearance="Primary" Click="LoginButton_Click" IsDefault="True">
                            <ui:Button.Style>
                                <Style TargetType="{x:Type ui:Button}" BasedOn="{StaticResource {x:Type ui:Button}}">
                                    <Setter Property="Background" Value="#495057"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="CornerRadius" Value="6"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#343A40"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#23272B"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#ADB5BD"/>
                                            <Setter Property="Foreground" Value="#6C757D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:Button.Style>
                        </ui:Button>
                        

                    </StackPanel>

                    <!-- Footer -->
                    <TextBlock Text="© 2025 Pilot App - Tous droits réservés"
                              HorizontalAlignment="Center"
                              Foreground="#ADB5BD"
                              FontSize="11"
                              Margin="0,20,0,0"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>