<UserControl
    x:Class="PilotApp.Views.UserControls.AjouterCommandeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PilotApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignWidth="724"
    mc:Ignorable="d" Height="525">
    <Grid>
        <ui:Card
    Margin="20,0,20,0"
    VerticalAlignment="Top"
    Background="#E4FFFFFF" Height="503">
            <StackPanel x:Name="panelFormChien" Cursor="" Height="474">
                <Label
           Width="200"
           VerticalAlignment="Stretch"
           Content="Employé" />
                <ComboBox
           Width="200"
           DisplayMemberPath="Nom"
           ItemsSource="{Binding LesEmployes}"
           SelectedItem="{Binding Commande.UnEmploye, Mode=TwoWay}" />
                <Label
           Width="200"
           VerticalAlignment="Stretch"
           Content="Mode de transport" />
                <ComboBox
           Width="200"
           DisplayMemberPath="Nom"
           ItemsSource="{Binding LesModesTransports}"
           SelectedItem="{Binding Commande.UnModeTransport, Mode=TwoWay}" />
                <Label
           Width="200"
           VerticalAlignment="Stretch"
           Content="Revendeur" />
                <ComboBox
           Width="200"
           DisplayMemberPath="RaisonSociale"
           ItemsSource="{Binding LesRevendeurs}"
           SelectedItem="{Binding Commande.UnRevendeur, Mode=TwoWay}" />
                <Label
           Width="200"
           VerticalAlignment="Stretch"
           Content="Date commande" />
                <DatePicker Width="200" SelectedDate="{Binding DateCommande, Mode=TwoWay}" />
                <Label
           Width="200"
           VerticalAlignment="Stretch"
           Content="Date de livraison" />
                <DatePicker Width="200" SelectedDate="{Binding DateLivraison, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label
           Width="200"
           VerticalAlignment="Stretch"
           Content="Prix total" />
                <TextBox x:Name="txtPrixTotal"
        Width="200"
        IsReadOnly="True"
        Text="{Binding Commande.Prix, Mode=OneWay}" />

                <TextBlock
           x:Name="txtNbProduits"
           Width="200"
           Margin="0,10"
           FontWeight="Bold"
           Text="0 produit(s) ajouté(s)"
           TextAlignment="Center" />


                <ui:Button
           x:Name="butAjouterProduit"
           Width="200"
           HorizontalAlignment="Center"
           VerticalAlignment="Stretch"
           Appearance="Success"
           Click="butAjouterProduit_Click"
           Content="Ajouter un produit" />
                <ui:Button
           x:Name="butValiderCommande"
           Width="200"
           HorizontalAlignment="Center"
           VerticalAlignment="Stretch"
           Appearance="Success"
           Click="butValiderCommande_Click"
           Content="ValiderCommande" />
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>
