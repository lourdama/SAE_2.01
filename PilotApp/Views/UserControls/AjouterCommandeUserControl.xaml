<UserControl
    x:Class="PilotApp.Views.UserControls.AjouterCommandeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PilotApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="550"
    d:DesignWidth="350"
    mc:Ignorable="d">
    <Grid>
        <ui:Card
            Margin="20,0,20,57"
            VerticalAlignment="Bottom"
            Background="#E4FFFFFF">
            <StackPanel x:Name="panelFormProduit">
                <Label Width="200" Content="Employé" />
                <ComboBox Width="200" ItemsSource="{Binding FontFamilies}" />
                <Label Width="200" Content="Mode de transport" />
                <ComboBox Width="200" ItemsSource="{Binding FontFamilies}" />
                <Label Width="200" Content="Revendeur" />
                <ComboBox Width="200" ItemsSource="{Binding FontFamilies}" />
                <Label Width="200" Content="Date commande" />
                <DatePicker Width="200" VerticalAlignment="Stretch" />
                <Label Width="200" Content="Date de livraison" />
                <DatePicker Width="200" VerticalAlignment="Stretch" />
                <Label Width="200" Content="Prix total" />
                <ui:NumberBox Width="200" Icon="CurrencyDollarEuro24" />
                <ui:Button
                    x:Name="butAjouterProduit"
                    Width="200"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Appearance="Success"
                    Content="Ajouter un produit" />
                <ui:Button
                    x:Name="butValiderCommande"
                    Width="200"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Appearance="Success"
                    Click="butValiderCommande_Click"
                    Content="ValiderCommande" />
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>
