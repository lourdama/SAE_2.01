<UserControl
    x:Class="PilotApp.Views.UserControls.AjouterCommandeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PilotApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="950"
    d:DesignWidth="724"
    mc:Ignorable="d">
    <StackPanel x:Name="panelFormCommande" Background="White">
        <Label
            Width="200"
            VerticalAlignment="Stretch"
            Content="Employé" />
        <ComboBox
            Width="200"
            VerticalAlignment="Stretch"
            DisplayMemberPath="Nom"
            ItemsSource="{Binding LesEmployes}" />
        <Label
            Width="200"
            VerticalAlignment="Stretch"
            Content="Mode de transport" />
        <ComboBox
            Width="200"
            VerticalAlignment="Stretch"
            DisplayMemberPath="Nom"
            ItemsSource="{Binding LesModesTransports}" />
        <Label
            Width="200"
            VerticalAlignment="Stretch"
            Content="Revendeur" />
        <ComboBox
            Width="200"
            VerticalAlignment="Stretch"
            DisplayMemberPath="RaisonSociale"
            ItemsSource="{Binding LesRevendeurs}" />
        <Label
            Width="200"
            VerticalAlignment="Stretch"
            Content="Date commande" />
        <DatePicker Width="200" VerticalAlignment="Stretch" />
        <Label
            Width="200"
            VerticalAlignment="Stretch"
            Content="Date de livraison" />
        <DatePicker Width="200" VerticalAlignment="Stretch" />
        <Label
            Width="200"
            VerticalAlignment="Stretch"
            Content="Prix total" />
        <TextBox Width="205" VerticalAlignment="Stretch" />
        <ui:Button
            x:Name="butAjouterProduit"
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Appearance="Success"
            Content="Ajouter un produit" />
        <ui:Button
            x:Name="butValiderCommande"
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Appearance="Success"
            Click="butValiderCommande_Click"
            Content="ValiderCommande" />
    </StackPanel>
</UserControl>
