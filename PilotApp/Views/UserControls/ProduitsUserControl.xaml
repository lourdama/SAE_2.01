<UserControl
    x:Class="PilotApp.Views.UserControls.ProduitsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="950"
    Height="724">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*" />
            <RowDefinition Height="293*" />
        </Grid.RowDefinitions>

        <ui:DataGrid
            Grid.Row="1"
            Grid.Column="0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding}">

            <ui:DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Code}" Header="Code" />
                <DataGridTextColumn Binding="{Binding Nom}" Header="Nom" />
                <DataGridTextColumn Binding="{Binding UnTypePointe.Nom}" Header="Type Pointe" />
                <DataGridTextColumn Binding="{Binding UnType.Nom}" Header="Num Type" />
                <DataGridTextColumn Binding="{Binding PrixVente, StringFormat={}{0} €}" Header="PrixVente" />
                <DataGridTextColumn Binding="{Binding QuantiteStock}" Header="Quantité" />
                <DataGridCheckBoxColumn Binding="{Binding Disponible}" Header="Disponible" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>

        <ui:Button
            x:Name="butAjouter"
            Grid.Row="1"
            Grid.Column="1"
            Width="124"
            Height="32"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Appearance="Primary"
            Click="butAjouter_Click"
            Content="Ajouter" />

        <ui:Button
            x:Name="butModifier"
            Grid.Row="1"
            Grid.Column="1"
            Width="124"
            Height="32"
            Margin="0,68,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Appearance="Primary"
            Click="butModifier_Click"
            Content="Modifier" />

        <ui:Button
            x:Name="butSupprimer"
            Grid.Row="1"
            Grid.Column="1"
            Width="124"
            Height="32"
            Margin="0,128,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Appearance="Primary"
            Click="butSupprimer_Click"
            Content="Supprimer" />

        <ui:TextBox
            Width="88"
            Margin="10,69,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            PlaceholderText="Filtre code"
            TextChanged="TextBox_TextChanged" />
        <ui:TextBox
            Width="88"
            Margin="103,69,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            PlaceholderText="Filtre nom"
            TextChanged="TextBox_TextChanged" />
        <ComboBox
            Height="36"
            Margin="196,69,516,0"
            VerticalAlignment="Top"
            ItemsSource="{Binding UnEmploye.Nom}"
            Text="Filtre Type Pointe" />
        <ComboBox
            Height="36"
            Margin="289,69,423,0"
            VerticalAlignment="Top"
            ItemsSource="{Binding UnEmploye.Nom}"
            Text="Filtre Type" />
        <ui:NumberBox
            Margin="382,69,279,0"
            VerticalAlignment="Top"
            Icon="NumberSymbolSquare24"
            PlaceholderText="Filtre Prix" />

        <ui:NumberBox
            Margin="526,69,98,0"
            VerticalAlignment="Top"
            Icon="NumberSymbolSquare24"
            PlaceholderText="Filtre Quantité" />
        <StackPanel Margin="702,39,93,4" Grid.ColumnSpan="2">
            <CheckBox
                    Command="{Binding ViewModel.SelectAllCheckedCommand, Mode=OneWay}"
                    CommandParameter="{Binding Mode=OneWay, RelativeSource={RelativeSource Mode=Self}}"
                    Content="Tous"
                    IsChecked="{Binding ViewModel.SelectAllCheckBoxChecked, Mode=TwoWay}"
                    IsThreeState="True" />
            <CheckBox
                    Margin="24,0,0,0"
                    Command="{Binding ViewModel.SingleCheckedCommand, Mode=OneWay}"
                    CommandParameter="1"
                    Content="Disponible"
                    IsChecked="{Binding ViewModel.OptionOneCheckBoxChecked, Mode=TwoWay}" />
            <CheckBox
                    Margin="24,0,0,0"
                    Command="{Binding ViewModel.SingleCheckedCommand, Mode=OneWay}"
                    CommandParameter="2"
                    Content="Indisponible"
                    IsChecked="{Binding ViewModel.OptionTwoCheckBoxChecked, Mode=TwoWay}" />

        </StackPanel>
    </Grid>
</UserControl>