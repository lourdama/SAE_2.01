<UserControl
    x:Class="PilotApp.Views.UserControls.CommandesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=System.Runtime"
    xmlns:model="clr-namespace:PilotApp.Models"
    Width="215"
    Height="100">

    <StackPanel Background="White">

        <DataGrid
            x:Name="dgCommandes"
            Width="161"
            Height="86"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesCommandes}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Id, ValidatesOnExceptions=true}"
                    Header="Id" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock
            Height="11"
            Background="AliceBlue"
            Text="{Binding LesCommandes.Count}" />

    </StackPanel>
</UserControl>