<UserControl
    x:Class="PilotApp.Views.UserControls.CommandesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=System.Runtime"
    xmlns:model="clr-namespace:PilotApp.Models"
    Width="950"
    Height="724">

    <StackPanel Background="White">

        <DataGrid
            x:Name="dgCommandes"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                <DataGridTextColumn Binding="{Binding DateCommande}" Header="Date commande" />
                <DataGridTextColumn Binding="{Binding DateLivraison}" Header="Livraison" />
                <DataGridTextColumn Binding="{Binding Prix}" Header="Prix" />
                <DataGridTextColumn Binding="{Binding UnEmploye.Nom}" Header="Employé" />
                <DataGridTextColumn Binding="{Binding UnRevendeur.Nom}" Header="Revendeur" />
                <DataGridTextColumn Binding="{Binding UnModeTransport.Nom}" Header="Transport" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock
            Height="11"
            Background="AliceBlue"
            Text="{Binding LesCommandes.Count}" />

    </StackPanel>
</UserControl>