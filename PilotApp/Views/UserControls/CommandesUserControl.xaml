<UserControl
    x:Class="PilotApp.Views.UserControls.CommandesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=System.Runtime"
    xmlns:model="clr-namespace:PilotApp.Models"
    Width="215"
    Height="100">

    <StackPanel Background="White">

         <DataGrid x:Name="dgCommandes"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Date commande" Binding="{Binding DateCommande}" />
                <DataGridTextColumn Header="Livraison" Binding="{Binding DateLivraison}" />
                <DataGridTextColumn Header="Prix" Binding="{Binding Prix}" />
                <DataGridTextColumn Header="Employé" Binding="{Binding UnEmploye.Nom}" />
                <DataGridTextColumn Header="Revendeur" Binding="{Binding UnRevendeur.Nom}" />
                <DataGridTextColumn Header="Transport" Binding="{Binding UnModeTransport.Nom}" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock
            Height="11"
            Background="AliceBlue"
            Text="{Binding LesCommandes.Count}" />

    </StackPanel>
</UserControl>