<UserControl
    x:Class="PilotApp.Views.UserControls.AjouterProduitUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PilotApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="550"
    d:DesignWidth="350"
    mc:Ignorable="d">
    <Grid>
        <ui:Card Margin="20" Background="#E4FFFFFF">
            <StackPanel x:Name="panelFormProduit">
                <Label Width="200" Content="Nom produit" />
                <TextBox
                    x:Name="textNom"
                    Width="200"
                    Text="{Binding Nom, ValidatesOnExceptions=True}"
                    TextWrapping="Wrap" />
                <Label Width="200" Content="Code produit" />
                <TextBox
                    x:Name="textMaitre"
                    Width="200"
                    Text="{Binding Code, ValidatesOnExceptions=True}"
                    TextWrapping="Wrap" />
                <Label Width="200" Content="Type Pointe" />
                <ComboBox Width="200" ItemsSource="{Binding FontFamilies}" />
                <Label Width="200" Content="Type" />
                <ComboBox Width="200" ItemsSource="{Binding FontFamilies}" />
                <Label Width="200" Content="Quantité en Stock" />
                <ui:NumberBox Icon="Box24" Width="200"/>
                <Label Width="200" Content="Prix du produit" />
                <ui:NumberBox Icon="CurrencyDollarEuro24" Width="200"/>
                <Label Width="200" Content="Disponibilité" />
                <ui:ToggleSwitch OffContent="Indisponible" OnContent="Disponible" HorizontalAlignment="Stretch" Width="200"/>
                <ui:Button
                    Appearance="Success"
                    x:Name="butAjouter"
                    Width="200"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Content="Ajouter" />
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>
