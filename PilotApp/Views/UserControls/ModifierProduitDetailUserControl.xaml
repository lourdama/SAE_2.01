<UserControl
    x:Class="PilotApp.Views.UserControls.ModifierProduitDetailUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PilotApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="337*" />
            <ColumnDefinition Width="53*" />
        </Grid.ColumnDefinitions>
        <!--  DataGrid qui monte directement le dictionnaire LesSousCommandes  -->
        <ui:DataGrid
            x:Name="dgLignes"
            Grid.ColumnSpan="2"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding Commande.LesSousCommandes}">
            <ui:DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Key.Nom}"
                    Header="Produit"
                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Value[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="Quantité" />
                <DataGridTextColumn Binding="{Binding Value[1], Mode=TwoWay, StringFormat=N2}" Header="Prix unitaire" />
                <DataGridTextColumn
                    Binding="{Binding Value[0], StringFormat=N2}"
                    Header="Total"
                    IsReadOnly="True" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>


        <Button x:Name="butModifier"
            Grid.Column="1"
            Width="100"
            Height="32"
            Margin="0,109,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"

            Content="Modifier" />
        <Button x:Name="butRetour"
            Grid.Column="1"
            Width="100"
            Height="32"
            Margin="0,58,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"

            Content="Retour" Click="butRetour_Click" />

        <Button x:Name="butAjouter"
            Grid.Column="1"
            Width="100"
            Height="32"
            Margin="0,162,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Ajouter" Click="butAjouter_Click" />
    </Grid>
</UserControl>
