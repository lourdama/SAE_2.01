<UserControl
    x:Class="PilotApp.Views.UserControls.RevendeursUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="950"
    Height="724">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="381*" />
            <ColumnDefinition Width="94*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*" />
            <RowDefinition Height="293*" />
        </Grid.RowDefinitions>

        <ui:DataGrid
            x:Name="dgRevendeur"
            Grid.Row="1"
            Grid.Column="0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding}">

            <ui:DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                <DataGridTextColumn Binding="{Binding RaisonSociale}" Header="RaisonSociale" />
                <DataGridTextColumn Binding="{Binding Rue}" Header="Rue" />
                <DataGridTextColumn Binding="{Binding Ville}" Header="Ville" />
                <DataGridTextColumn Binding="{Binding CodePostal}" Header="Code Postal" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>

        <ui:Button
            x:Name="butAjouter"
            Grid.Row="1"
            Grid.Column="1"
            Width="124"
            Height="32"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Appearance="Primary"
            Click="butAjouter_Click"
            Content="Ajouter" />

        <ui:Button
            x:Name="butModifier"
            Grid.Row="1"
            Grid.Column="1"
            Width="124"
            Height="32"
            Margin="0,68,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Appearance="Primary"
            Click="butModifier_Click"
            Content="Modifier" />

        <ui:Button
            x:Name="butSupprimer"
            Grid.Row="1"
            Grid.Column="1"
            Width="124"
            Height="32"
            Margin="0,128,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Appearance="Primary"
            Click="butSupprimer_Click"
            Content="Supprimer" />

        <ui:TextBox
            Width="555"
            Margin="0,72,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            PlaceholderText="Effectuez une recherche..." />

        <ContentControl x:Name="vueCommande" />

    </Grid>
</UserControl>